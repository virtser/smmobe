    <%= f.input :campaign_id, :as => :hidden %>
    <%= f.button :submit, value: "Next      â†’" %>
<% end %>

<div class="dynamic_params">
  <p>Use the following placeholders in message body to replace them with dynamic customer params:</p>
  <ul style="list-style-type: none">
    <li><b>#first_name</b> - Customer first name</li>
    <li><b>#last_name</b> - Customer last name</li>
    <li><b>#custom1</b> - Custom column 1</li>
    <li><b>#custom2</b> - Custom column 2</li>
    <li><b>#custom3</b> - Custom column 3</li>
    <li><b>#phone</b> - Customer phone number</li>
  </ul>
</div>
