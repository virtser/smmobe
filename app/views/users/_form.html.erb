<%= simple_form_for(@user, html: {class: 'form-inline' }) do |f|%>
    <%= f.input :name %>
    <%= f.input :email, placeholder: 'user@domain.com' %>
    <%= f.input :phone, placeholder: '+1 (123) 456-6655'%>
    <%= f.input :password %>

    <% if controller.controller_name == 'users' && controller.action_name == 'edit' %>
        <%= f.input :istest %>
    <% end %>

    <%= f.button :submit %>
<% end %>
