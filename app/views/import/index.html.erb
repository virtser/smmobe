<%= render 'campaigns/steps_header' %>

<div class="row cusomers">
	<div class="span8">

			<%= form_tag import_path, multipart: true do %>

	<div class="steps">
	    <div class="container">
	      <div class="row numbers">   
	        
	        <%= render 'campaigns/steps', :locals => {:step1 => "active",
	                              :step2 => "active",
	                              :step3 => "active"} %>
	        
	         <div class="span2 center button">
			    <%= submit_tag "IMPORT", class: 'btn btn-next' %>
		   	</div>
	    </div>
	  </div>
	</div>  

	<%= render 'customers/tabs', :locals => {:list => "inactive", :manual => "inactive", :csv => "active"} %>	

	<div class="tab-block">
			<h3>Import customers</h3>

			    <%= hidden_field_tag('campaign_id', flash[:campaign_id]) %>
			    <%= file_field_tag :file, class: 'btn btn-default btn-file' %>
	</div>

			<% end %>

	</div>	
	<div class="span4 phone">
		<%= render 'campaigns/phone' %>
	</div>
</div>
