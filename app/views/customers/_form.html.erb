<%= simple_form_for(@customer, html: {class: 'form-inline' }) do |f|%>

 <div class="steps">
    <div class="container">
      <div class="row numbers">   
        
        <%= render 'campaigns/steps', :locals => {:step1 => "active",
                              :step2 => "active",
                              :step3 => "active"} %>
        
        <div class="span2 center button">
              <%= f.button :submit, value: "NEXT", class: "btn btn-next" %>
        </div>
      </div>
    </div>  
  </div>

<div class="add_customer">
    <h3>Add customer</h3>

    <%= f.input_field :phone, placeholder: 'Phone: +1 (123) 456-6655'%>
    <%= f.error :phone, id: 'error' %>
    <%= f.input_field :first_name, placeholder: 'First Name' %>
    <%= f.error :first_name, id: 'error' %>
    <%= f.input_field :last_name, placeholder: 'Last Name' %><br/>
    <%= f.input_field :custom1, placeholder: 'Optional custom field 1'%>
    <%= f.input_field :custom2, placeholder: 'Optional custom field 2'%>
    <%= f.input_field :custom3, placeholder: 'Optional custom field 3'%>
    <%= f.input_field :campaign_id, :as => :hidden %>
</div>
<% end %>