<%= render 'campaigns/steps_header' %>

<div class="row customers">
	<div class="span8">


	<div class="steps">
	    <div class="container">
	      	<div class="row numbers">   
	        	<%= render 'campaigns/steps', :locals => {:step1 => "active",
	                              :step2 => "active",
	                              :step3 => "active"} %>
		        
		         <div class="span2 center button">
			   	    <input class="btn btn-next" name="commit" type="submit" value="NEXT" onclick="location.href='/reviews/<%= flash[:campaign_id] %>'"/>
			   	</div>
			</div>

			<div class="span8">
				<%= render 'tabs', :locals => {:list => "active", :manual => "inactive", :csv => "inactive"} %>

				<div class="tab-block">
					<%= render 'import' %>

                    <div class="span8">
                    	<% unless flash[:notice].nil? %>
	                    	<% flash[:notice].each do |s| %>
	                    		<div class="alert alert-error span6"><%=s %></div>
	                    	<% end %>
                    	<% end %>
                    </div>

					<% if !@customers.nil? && @customers.count > 0 %>
					    <h3>Customers</h3>
					    <%= render 'customers' %>
					<% end %>


					<%= render 'form' %>

				</div>
			</div>

		</div>
	</div>

	</div>	
	<div class="span4 phone">
		<%= render 'campaigns/phone' %>
	</div>
</div>
