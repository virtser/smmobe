<%= render 'campaigns/steps_header' %>

<div class="row cusomers">
	<div class="span8">


	<div class="steps">
	    <div class="container">
	      	<div class="row numbers">   
	        	<%= render 'campaigns/steps', :locals => {:step1 => "active",
	                              :step2 => "active",
	                              :step3 => "active"} %>
		        
		         <div class="span2 center button">
			   	    <input class="btn btn-next" name="commit" type="submit" value="NEXT" onclick="location.href='/reviews/<%= flash[:campaign_id] %>'"/>
			   	</div>
			</div>

			<%= render 'tabs', :locals => {:list => "active", :manual => "", :csv => ""} %>

			<div class="row tab-block">
				<div class="span8">
					<% if !@customers.nil? && @customers.count > 0 %>
					    <h3>Customers</h3>
					    <%= render 'customers' %>
					<% end %>
				</div>	
			</div>

			<div style="font-style: italic; color: red;"><%= flash[:notice] %></div>			
			</div>
	</div>

	</div>	
	<div class="span4 phone">
		<%= render 'campaigns/phone' %>
	</div>
</div>
