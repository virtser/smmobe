<div class="device-mockup iphone5 portrait white">
  <div class="device">
    <div class="screen">
      <!-- PUT CONTENTS HERE -->

      <% if flash[:message_text].nil? %>
          <div class="baloonTo" ng-show="messageText">
            {{ messageText }}
          </div>
      <% else %>
          <div class="baloonTo">
            <%= flash[:message_text] %>
          </div>
      <% end %>

      <% if current_page?(:controller => 'campaigns', :action => 'new') %>
        <div class="greeting">
          Start building your message
        </div>  
      <% end %>
    </div>
    <div class="button">
      <!-- You can hook the "home button" to some JavaScript events or just remove it -->
    </div>
  </div>
</div>

<script>

  var dirPhone = $('.baloonTo');
  dirPhone.change(function(e) { changeDirection(dirPhone); }); 
  $(document).ready(function(e) { changeDirection(dirPhone); }); 

</script>